<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CancelButton" parent="Theme.AccurateTranslation">
        <item name="colorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="DeleteButton" parent="Theme.AccurateTranslation">
        <item name="colorPrimary">@android:color/holo_red_light</item>
    </style>

    <style name="LanguageText" parent="Theme.AccurateTranslation">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SaveButton" parent="Theme.AccurateTranslation">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/purple_200</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AccurateTranslation">
        <item name="android:background">@color/purple_700</item>
        <item name="android:elevation">16dp</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BookmarkLanguageText" parent="Theme.AccurateTranslation">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BookmarkTranslationText.Editing" parent="BookmarkTranslationText">
        <item name="android:singleLine">false</item>
    </style>

    <style name="BookmarkTranslationText" parent="Theme.AccurateTranslation">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="BookmarkTagText" parent="Theme.AccurateTranslation">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogHeaderText" parent="Theme.AccurateTranslation">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageSourceText" parent="Theme.AccurateTranslation">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>